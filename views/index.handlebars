
<div class="row">

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<h3 class="heading">BITE MEH!</h3>
        {{#each burgers}} 
        	{{#unless this.devoured}} 
		        <form class="eat-form form-group text-warning" action="/{{this.id}}?_method=PUT" method="POST">
		        	{{this.burger_name}}
		            <input type="hidden" name="eat" value="true">
		            <input type="image" class="eat-icon" src="assets/img/chow1.png" alt="eat icon"/>
		        </form>
        	{{/unless}} 
        {{/each}}
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<img src="/assets/img/burgerimg1.png" class="img-responsive" alt="burger">
        <h3 class="heading">REQUEST A BURGER</h3>
        <form class="add-burger-form text-warning" action="/" method="POST">
            <div class="form-group">
                <input type="text" id="newBurger" name="name" placeholder="Burger name">
                <button type="submit" class="btn btn-outline-secondary">Send Order to Chef</button>
            </div>
        </form>
    </div>

    <div class="col-md-4 col-sm-12 col-xs-12">
    	<h3 class="heading">IN MY BELLY</h3>
        <div class="list-group">
            {{#each burgers}} 
            	{{#if this.devoured}}
            		<form class="delete-form form-group" action="/{{this.id}}?_method=DELETE" method="POST">
            			{{this.burger_name}}
            			<input type="image" class="trash-icon" src="assets/img/trash.png" alt="trash icon"/>
					</form>
            	{{/if}} 
            {{/each}}
        </div>
    </div>
</div>
